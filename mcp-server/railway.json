{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "mcp-server/Dockerfile",
        "watchPatterns": ["mcp-server/**"]
    },
    "deploy": {
        "runtime": "V2",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "healthcheckPath": "/",
        "numReplicas": 1
    }
}
