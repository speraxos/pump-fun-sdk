{
    "name": "pumpfun-telegram-bot",
    "version": "1.1.0",
    "private": true,
    "description": "Telegram bot + REST API for monitoring PumpFun creator fee & cashback claims on Solana with real-time notifications, SSE streaming, and webhooks",
    "type": "module",
    "main": "dist/index.js",
    "engines": {
        "node": ">=20.0.0"
    },
    "keywords": [
        "solana",
        "pumpfun",
        "telegram",
        "bot",
        "fee-claims",
        "monitor",
        "rest-api",
        "sse",
        "webhooks"
    ],
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "start": "node dist/index.js",
        "api": "ENABLE_API=true API_ONLY=true tsx src/index.ts",
        "api:dev": "ENABLE_API=true API_ONLY=true tsx watch src/index.ts",
        "dev:full": "ENABLE_API=true tsx watch src/index.ts",
        "build": "tsc",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@solana/web3.js": "^1.98.0",
        "bs58": "^6.0.0",
        "dotenv": "^16.4.7",
        "grammy": "^1.35.0"
    },
    "devDependencies": {
        "@types/node": "^22.13.0",
        "tsx": "^4.19.0",
        "typescript": "^5.7.0"
    }
}