{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "Dockerfile"
    },
    "deploy": {
        "runtime": "V2",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "healthcheckPath": null,
        "numReplicas": 1,
        "envVars": {
            "TELEGRAM_BOT_TOKEN": {
                "description": "Telegram bot token from @BotFather",
                "required": true
            },
            "SOLANA_RPC_URL": {
                "description": "Solana RPC endpoint (mainnet recommended)",
                "required": true
            },
            "SOLANA_WS_URL": {
                "description": "Solana WebSocket URL for real-time monitoring",
                "required": false
            },
            "ENABLE_LAUNCH_MONITOR": {
                "description": "Enable new token launch monitoring (true/false)",
                "required": false
            },
            "GITHUB_ONLY_FILTER": {
                "description": "Only notify for GitHub-linked tokens (true/false)",
                "required": false
            },
            "ALLOWED_USER_IDS": {
                "description": "Comma-separated Telegram user IDs to allow",
                "required": false
            }
        }
    }
}
